-- Roblox Arcade Font Executor (Safe Version)
local targetFont = Enum.Font.Arcade -- Bạn có thể đổi thành Enum.Font.PressStart2P

local function applyFont(obj)
    -- Chỉ tác động nếu đối tượng có thuộc tính Font (Tránh làm lỗi Image)
    if obj:IsA("TextLabel") or obj:IsA("TextButton") or obj:IsA("TextBox") then
        pcall(function()
            obj.Font = targetFont
            
            -- Tinh chỉnh để chữ Arcade dễ nhìn hơn
            obj.TextStrokeTransparency = 0.8 -- Viền nhẹ để nổi bật
            obj.RichText = true -- Giữ nguyên định dạng màu sắc của game
        end)
    end
end

-- Quét toàn bộ UI hiện có (Bao gồm cả CoreGui nếu executor hỗ trợ)
for _, v in ipairs(game:GetDescendants()) do
    applyFont(v)
end

-- Lắng nghe UI mới (như bảng Chat hoặc Menu mới mở)
game.DescendantAdded:Connect(function(v)
    -- Đợi một chút để UI load xong nội dung rồi mới đổi font
    task.wait(0.1) 
    applyFont(v)
end)

print("Arcade Font Loaded - Texture Safe!")
