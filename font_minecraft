-- Script tối ưu: Sửa lỗi Texture và ép Font Arcade
local targetFont = Enum.Font.Arcade

local function fixAndApply(obj)
    pcall(function()
        -- 1. Nếu là Text: Đổi sang Arcade
        if obj:IsA("TextLabel") or obj:IsA("TextButton") or obj:IsA("TextBox") then
            obj.Font = targetFont
        end
        
        -- 2. Nếu là Image: Ép nạp lại Texture nếu bị trống
        if obj:IsA("ImageLabel") or obj:IsA("ImageButton") then
            if obj.Image == "" or not obj.IsLoaded then
                -- Ép buộc cập nhật lại hiển thị
                local currentImg = obj.Image
                obj.Image = ""
                task.wait()
                obj.Image = currentImg
            end
        end
    end)
end

-- Chạy quét toàn bộ game
for _, v in ipairs(game:GetDescendants()) do
    fixAndApply(v)
end

-- Theo dõi các UI mới xuất hiện
game.DescendantAdded:Connect(fixAndApply)

print("Đã thực thi: Font Arcade + Fix Texture")
